{% extends "AdminPanel/Layouts/base.html.twig" %}
 {% block body %}
     <body>
     <div id="wrapper">
         {{ include('AdminPanel/Includes/headerTop.html.twig')}}
         <!-- /. NAV TOP  -->
         {{ include('AdminPanel/Includes/menue.html.twig')}}
         <!-- /. NAV SIDE  -->
         <div id="page-wrapper" >
             <div id="page-inner">
                 <div class="row">
                     <div class="col-md-12">
                         <h5>لیست نظرات  خدمات  </h5>
                     </div>
                 </div>
                 <!-- /. ROW  -->
                 <hr />
                 <div class="row directionrtl">
                     <div class="col-lg-12">
                         {% for message in app.flashes('success') %}
                             <div class="alert alert-success alert-dismissible">
                                 <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                 <strong>پیام سیستم!</strong>  {{ message }}
                             </div>
                         {% endfor %}
                     </div>
                     <!-- /. ROW  -->
                     <hr />

                     <div class="col-md-12">
                         <!-- Advanced Tables -->
                         <div class="panel panel-default">
                             <div class="panel-heading">
                                 لیست خدمات
                             </div>
                             <div class="panel-body">
                                 <div class="table-responsive">
                                     <table class="table listT table-striped table-bordered table-hover" id="dataTables-example">
                                         <thead>
                                         <tr>
                                             <th>#</th>
                                             <th>نام</th>
                                             <th>ایمیل</th>
                                             <th>نام خبر</th>
                                             <th>تاریخ ارسال</th>
                                             <th>متن پیام</th>
                                             <th>وضعیت نمایش</th>
                                             <th>عملیات</th>
                                         </tr>
                                         </thead>
                                         <tbody>
                                         {% set  count=1 %}
                                         {% for Comment in Comments %}
                                             {% if count is odd  %}
                                                 {% set  style="odd gradeX" %}
                                             {% else %}
                                                 {% set  style="even gradeC" %}
                                             {% endif %}
                                             <tr class="{{ style }}">
                                                 <td>{{ count }}</td>
                                                 <td>{{ Comment.name |striptags|raw}}</td>
                                                 <td>{{ Comment.email |striptags|raw}}</td>
                                                 <td>{{ Comment.idService.name}}</td>
                                                 <td>{{ Comment.dateInsert |jdate("Y/m/d") }}</td>
                                                 <td>{{ Comment.subject |striptags|raw|slice(0, 100)}}</td>


                                                 <td class="center">{{ Comment.displayStatus |displayNotDisplay}}</td>
                                                 <td class="center listPerform">
                                                     <a href="{{ url('deleteCommentService',{'id': Comment.id}) }}" onClick="return confirm('آیا شما مطمین هستید برای حذف این ایتم؟')"><i class="fa bg-color-red-font fa-trash" data-toggle="tooltip" title="حذف خبر"></i></a>
                                                     <a href="{{ url('editServiceComment',{'id': Comment.id}) }}"><i class="fa bg-color-blue-font fa-eye" data-toggle="tooltip"  title="نمایش کامنت"></i></a>
                                                 </td>
                                             </tr>
                                             {% set  count=count+1 %}
                                         {% endfor %}
                                         </tbody>
                                     </table>
                                 </div>
                             </div>
                             <div class="clearfix"></div>
                             <div class="col-lg-12">
                                 <div class="col-lg-2"></div>
                                 <div class="col-lg-12 paginationAdmin" style="text-align: center">
                                     <div class="navigation">
                                         {{ knp_pagination_render(Comments) }}
                                     </div>
                                 </div>
                                 <div class="col-lg-2"></div>
                             </div>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </div>
     </body>
     </html>
 {% endblock %}