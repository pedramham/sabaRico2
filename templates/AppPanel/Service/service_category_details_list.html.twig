                    </div>
                </div>



            </div>
            <div class="col-3 card-details p-rl-451 ">
                <div class="row">

                    {{ render(controller('App\\Controller\\AppPanel\\PanelDetailsPageController::panelRightLastServiceAction')) }}
                    {{ render(controller('App\\Controller\\AppPanel\\PanelDetailsPageController::panelRightMostPopularArticleAction',{'id':ServiceCategories.id })) }}
                    {{ render(controller('App\\Controller\\AppPanel\\PanelDetailsPageController::panelRightLastNewsAction' )) }}

                </div>
            </div>

        </div>

    </div>



    <amp-animation id="hideAnim"
                   layout="nodisplay">
        <script type="application/json">
            {
                "duration": "200ms",
                "fill": "both",
                "iterations": "1",
                "direction": "alternate",
                "animations": [{
                    "selector": "#scrollToTopButton",
                    "keyframes": [{
                        "opacity": "0",
                        "visibility": "hidden"
                    }]
                }]
            }
        </script>
    </amp-animation>
    <amp-animation id="showAnim"
                   layout="nodisplay">
        <script type="application/json">
            {
                "duration": "200ms",
                "fill": "both",
                "iterations": "1",
                "direction": "alternate",
                "animations": [{
                    "selector": "#scrollToTopButton",
                    "keyframes": [{
                        "opacity": "1",
                        "visibility": "visible"
                    }]
                }]
            }
        </script>
    </amp-animation>


    {{ render(controller('App\\Controller\\AppPanel\\PanelController::footerAction' )) }}

