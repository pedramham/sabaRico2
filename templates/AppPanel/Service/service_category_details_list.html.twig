{% extends "AppPanel/Layouts/base.html.twig" %}
{% block title %}{{ ServiceCategories.title  }}{% endblock %}
{% set labelKeyWords = ServiceCategories.labelKeyWord|split('+') %}
  {% block javascripts %}
      {{ parent() }}
      <script async custom-element="amp-list" src="https://cdn.ampproject.org/v0/amp-list-0.1.js"></script>
      <script async custom-template="amp-mustache" src="https://cdn.ampproject.org/v0/amp-mustache-0.2.js"></script>
  {% endblock %}
{% block metaTag %}
    {{ parent() }}
    <link rel="icon" type="image/x-icon" href="{{ absolute_url(asset('uploads/articles/' ~  ServiceCategories.largePic))}}" />
    <meta name="description" content=" {{ ServiceCategories.descriptionSeo |striptags|raw|slice(0, 150)}}">
    <meta name="keywords" content="{{ ServiceCategories.name  }}, {{ ServiceCategories.title  }}| {% for labelKeyWord in labelKeyWords %} {{ labelKeyWord }} | {% endfor %} ">
    <link rel="canonical" href="https://sabarico.com/ServiceCategory/{{ ServiceCategories.id }}/{{ ServiceCategories.urlSlug }}" />

    <script type="application/ld+json">
        {"@context":"http://schema.org",
            "@type":"BreadcrumbList",
            "itemListElement":[{"@type":"ListItem",
                "position":1,
                "item":{"@id":"{{ url('mainPageIndex') }}",
                    "name":"صفحه اصلی مجله زیبایی صبا ریکو"
                }},
                {"@type":"ListItem"
                ,"position":2,
                    "item":{"@id":"{{ url('ServiceList') }}",
                        "name":"لیست خدمات مجله زیبایی صبا ریکو "
                    }},
                {"@type":"ListItem"
                ,"position":3,
                    "item":{"@id":"{{ url('ServiceMain') }}",
                        "name":"لیست فهرست خدمات مجله زیبایی صبا ریکو "
                    }},
                {"@type":"ListItem",
                    "position":4,
                    "item":{"@id":"{{ url('ServiceCategoryDetails',{'id': ServiceCategories.id ,'slug':ServiceCategories.urlSlug}) }}",
                        "name":"{{ ServiceCategories.name }}"
                    }}
            ]}
    </script>
{% endblock %}
{% block body %}
    {{ parent() }}
    {{ render(controller('App\\Controller\\AppPanel\\PanelController::headerTopAction')) }}

    {{ render(controller('App\\Controller\\AppPanel\\PanelMenuController::menuAction')) }}
    <div class="d-flex text-right flex-direction-r fontSize08em bg-gary">
        <div class="directionRtl mr-3">
            <a href="{{ url('mainPageIndex') }}" class="text-NavyBlue" title="صفحه اصلی مجله زیبایی صبا ریکو">صفحه اصلی</a>
            <span class=""> > </span>
        </div>
        <div class="directionRtl mr-3 ">
            <a href="{{ url('ServiceList') }}" class="text-NavyBlue" title="لیست خدمات مجله زیبایی صباریکو">لیست خدمات </a>
            <span class=""> > </span>
        </div>
        <div class="directionRtl mr-3 ">
            <span class="color-red">
                <a href="{{ url('ServiceMain') }}" class="text-NavyBlue" title="لیست فهرست خدمات مجله زیبایی صبا ریکو">لیست فهرست خدمات</a>
            </span>
            <span class=""> > </span>
        </div>
        <div class="directionRtl mr-3 ">
            <a href="{{ url('ServiceCategoryDetails',{'id':ServiceCategories.id,'slug':ServiceCategories.urlSlug}) }}" class="text-NavyBlue">{{ ServiceCategories.name }} </a>
        </div>

    </div>
    <div class="container mt-15">


        <div class="d-flex justify-content-end border-b-l displayBlock450">
            <div class="col-3 directionRtl flex-100-450 list-2-576 list-2-576 align-self order-1">
                <a href="{{ url('ServiceCategoryDetails',{'id':ServiceCategories.id,'slug':ServiceCategories.urlSlug}) }} " class="imageEffectHover" title=" ">
                    <amp-img width="290" height="290" layout="responsive" alt="{{ ServiceCategories.name }}" title="{{ ServiceCategories.title }}"
                             src="{{ absolute_url(asset('uploads/articles/'~ ServiceCategories.smallPic ))}}">
                    </amp-img>
                </a>
            </div>
            <div class="col-9 flex-100-450 list-10-990 fontSize09em order-0 ">
                <div class="text-justify directionRtl lineHeight2em pr-10">
                    <h2 class="">
                        <a href=" {{ url('ServiceCategoryDetails',{'id':ServiceCategories.id,'slug':ServiceCategories.urlSlug}) }}" class="text-dark" title="{{ ServiceCategories.urlSlug }}">
                            {{ ServiceCategories.title }}
                        </a>
                    </h2>
                    <div class="prl-15">
                        {{ ServiceCategories.description |striptags('<ol></ol><ul></ul><li></li><br><p><h1></h1><h2></h2><h3></h3><h4></h4><h5></h5><a></a><src><b><img><strong></strong><table></table><th></th></tr><tr><td></td>')|raw}}

                    </div>

                </div>
            </div>
        </div>




        <div class="row  text-right flex-direction-r">
            <div class="col-9 card-details m-15-990 ">
                <div class="card border mrl-10 ">
                    <div class="card-header  bg-navyBlue fontSize09em">
                        <div>
